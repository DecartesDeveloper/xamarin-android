<?xml version="1.0" encoding="utf-8"?>
<Project>
  <!--NOTE: manually importing Sdk.props and Sdk.targets so we can replace the Pack target-->
  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.props" />
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <RootNamespace>Xamarin.Android.Tools.VSWhere</RootNamespace>
    <AssemblyName>vswhere</AssemblyName>
    <DefaultItemExcludes>$(DefaultItemExcludes);**\.DS_Store</DefaultItemExcludes>
  </PropertyGroup>

  <Import Project="..\..\Configuration.props" />

  <PropertyGroup>
    <StartupObject />
  </PropertyGroup>

  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.targets" />
  <Target Name="Pack" />

</Project>